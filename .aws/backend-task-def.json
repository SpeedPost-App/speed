{
  "family": "speedpost-backend-ec2-task",
  "requiresCompatibilities": ["EC2"],
  "networkMode": "awsvpc",
  "executionRoleArn": "arn:aws:iam::219675202104:role/ecsTaskExecutionRole", 
  "taskRoleArn": "arn:aws:iam::219675202104:role/ecsTaskExecutionRole", 
  "cpu": "512",
  "memory": "1024",
  "containerDefinitions": [
    {
      "name": "speedpost-backend",
      "image": "219675202104.dkr.ecr.ap-southeast-1.amazonaws.com/speedpost-backend:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8080,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {"name": "NODE_ENV", "value": "production"},
        {"name": "PORT", "value": "8080"}
      ],
      "secrets": [
        { "name": "DATABASE_URL", "valueFrom": "arn:aws:ssm:ap-southeast-1:219675202104:parameter/speedpost/DATABASE_URL" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-create-group": "true",
          "awslogs-group": "/ecs/speedpost-backend",
          "awslogs-region": "ap-southeast-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:8080/ || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}
